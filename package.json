  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start --prefix electron\" \"npm run dev --prefix front\""
  },
  "keywords": [],
  "author": "",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1"
