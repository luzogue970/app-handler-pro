{
  "name": "app-handler-pro",
  "version": "2.0.0",
  "description": "Am√©liorer l'interface utilisateur de `User Management` en utilisant un framework moderne.",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start --prefix electron\" \"npm run dev --prefix front\"",
    "build": "npm run build:front && npm run build:electron",
    "build:front": "npm --prefix front run build",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --linux",
    "ci": "npm ci && npm ci --prefix front && npm --prefix front run build",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "test": "vitest",
    "typecheck": "tsc -p . --noEmit"
  },
  "keywords": [],
  "author": {
    "name": "Math",
    "email": "tkt@exemple.com"
  },
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourcompany.apphandlerpro",
    "productName": "AppHandlerPro",
    "files": [
      "electron/**/*",
      "front/build/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "tasks": [
    {
      "label": "start_front",
      "type": "shell",
      "command": "npm run dev --prefix front",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": [],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Local:.*://localhost:\\d+"
        }
      }
    }
  ]
}
