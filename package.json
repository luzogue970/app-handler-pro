      "label": "start_front",
      "type": "shell",
      "command": "npm run dev --prefix front",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": [],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Local:.*://localhost:\\d+"
        }
      }
    }
  ]
}
